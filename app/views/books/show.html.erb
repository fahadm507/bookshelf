<div class="row">
  <a class="btn" href="/books">Back to book shelf </a>
  <div class="book-details">
    <ul class="list-inline">
      <li>Title: <%= @book.title %></li>
      <li>Author: <%= @book.author%></li>
      <li>Release year: <%= @book.year%></li>
      <li>Description: <%= @book.description%></li>
      <li>Category: <%= @book.category%></li>
    </ul>

    <h3>Reviews</h3>
      <%= link_to "New Review", new_book_review_path(@book), class: 'btn-large btn-success' %></a>
      <div class="reviews">
        <% @book.reviews.each do |review| %>
          <li>Rate: <%= review.rating %></li>
          <li>Details: <%=review.body %></li>
        <%end%>
      </div>
  </div>
</div>

